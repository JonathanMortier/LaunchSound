<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.patapin.djmojo.soundbox" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher_timmy"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:fullBackupContent=""
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".activity.QRCodeActivity"
            android:label="@string/title_activity_qrcode" >
        </activity>
        <activity
            android:name=".activity.StatActivity"
            android:label="@string/title_activity_stat" >
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".activity.MoviesActivity"
            android:label="@string/title_activity_movies"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.patapin.djmojo.soundbox.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.SouthParkActivity"
            android:label="@string/title_southpark"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.patapin.djmojo.soundbox.activity.MainActivity" />
        </activity>

        <activity
            android:name=".activity.CustomActivity">

        </activity>
        <activity android:name=".activity.SoundButtonActivity" />

    </application>

</manifest>
